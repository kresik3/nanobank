<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="outlook.krasovsky.dima.nanobank.ui.activity.ComplainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/root_btnnavigation_complain">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                style="@style/TextColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/base_space"
                android:gravity="center_horizontal"
                android:text="текст жалобы"
                android:textSize="@dimen/textSize_label_normal" />

            <EditText
                android:id="@+id/ed_complain_text"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/base_space"
                android:layout_height="match_parent" />
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/root_btnnavigation_complain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_close_complain"
            style="@style/ButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/base_space_2x"
            android:layout_marginLeft="@dimen/base_space_2x"
            android:layout_marginRight="@dimen/base_space"
            android:layout_marginTop="@dimen/base_space_2x"
            android:layout_weight="1"
            android:text="отмена" />

        <Button
            android:id="@+id/btn_complain"
            style="@style/ButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/base_space_2x"
            android:layout_marginLeft="@dimen/base_space"
            android:layout_marginRight="@dimen/base_space_2x"
            android:layout_marginTop="@dimen/base_space_2x"
            android:layout_weight="3"
            android:text="подать жалобу" />

    </LinearLayout>

</RelativeLayout>
