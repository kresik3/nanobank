<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/base_space">

    <RelativeLayout
        android:id="@+id/root_deposit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/base_space_2x">

        <TextView
            android:id="@+id/deposit_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/base_space"
            android:textSize="@dimen/textSize_label_smal" />

        <RelativeLayout
            android:id="@+id/root_deposit_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/deposit_about"
            android:layout_marginBottom="@dimen/base_space">

            <TextView
                android:id="@+id/hint_deposit_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сумма: "
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="@dimen/textSize_label_mini" />

            <TextView
                android:id="@+id/deposit_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/base_space"
                android:layout_toRightOf="@id/hint_deposit_amount"
                android:gravity="right"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="@dimen/textSize_label_mini" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/root_deposit_percent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/root_deposit_amount">

            <TextView
                android:id="@+id/hint_deposit_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="% (в месяц): "
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="@dimen/textSize_label_mini" />

            <TextView
                android:id="@+id/deposit_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/base_space"
                android:layout_toRightOf="@id/hint_deposit_percent"
                android:gravity="right"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="@dimen/textSize_label_mini" />

        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
