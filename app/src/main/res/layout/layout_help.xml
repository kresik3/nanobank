<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/base_space_2x">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/ic_creditor"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/base_space"
            android:background="@color/colorCreditor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="вы - кредитор"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/ic_creditor"
            android:textSize="@dimen/textSize_label_smal"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/ic_owner"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/base_space"
            android:background="@color/colorOwner" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ic_owner"
            android:layout_centerVertical="true"
            android:text="вы - заёмщик"
            android:textSize="@dimen/textSize_label_smal"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/root_wait_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/ic_wait_owner"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/base_space"
            android:background="@color/colorWaitOwner" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ic_wait_owner"
            android:layout_centerVertical="true"
            android:text="сделка никем не принята"
            android:textSize="@dimen/textSize_label_smal"/>

    </RelativeLayout>
</LinearLayout>