<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/root_current_deposit_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize_label_smal"
        android:layout_marginBottom="@dimen/base_space"/>

    <RelativeLayout
        android:id="@+id/root_current_deposit_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/root_current_deposit_about"
        android:layout_marginBottom="@dimen/base_space">

        <TextView
            android:id="@+id/hint_current_deposit_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сумма: "
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="@dimen/textSize_label_mini" />

        <TextView
            android:id="@+id/current_deposit_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/base_space"
            android:layout_toRightOf="@id/hint_current_deposit_amount"
            android:gravity="right"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="@dimen/textSize_label_mini" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/root_current_deposit_period"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/root_current_deposit_amount"
        android:layout_marginBottom="@dimen/base_space">

        <TextView
            android:id="@+id/hint_current_deposit_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Срок: "
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="@dimen/textSize_label_mini" />

        <TextView
            android:id="@+id/current_deposit_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/base_space"
            android:layout_toRightOf="@id/hint_current_deposit_period"
            android:gravity="right"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="@dimen/textSize_label_mini" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/root_current_deposit_period">

        <TextView
            android:id="@+id/hint_current_deposit_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="% (в месяц): "
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="@dimen/textSize_label_mini" />

        <TextView
            android:id="@+id/current_deposit_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/base_space"
            android:layout_toRightOf="@id/hint_current_deposit_percent"
            android:gravity="right"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="@dimen/textSize_label_mini" />

    </RelativeLayout>

</RelativeLayout>